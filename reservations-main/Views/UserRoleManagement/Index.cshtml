@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>


@{ ViewData["Title"] = "Index"; }

<h3 class="text-center">User Role Management</h3>
<hr />

<div class="container">

    @await Html.PartialAsync("_TopMenuPartial")

    <div class="row">
        <div class="col-12">
           
            <table class="table">
                <thead class="bg-dark text-white">
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
        <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.UserName</td>

                <td>
                    <a class="btn btn-success"
                       asp-route-userId="@u.Id"
                       asp-action="Details">View Details</a>

                </td>
            </tr>
            }
    </tbody>
</table>            
        </div>
    </div>
</div>

